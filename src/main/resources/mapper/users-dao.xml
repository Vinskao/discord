<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">


<mapper namespace="com.mli.assetmybatis.dao.UsersDAO">

    <resultMap id="usersResultMap" type="com.mli.assetmybatis.model.Users">
        <id property="id" column="id"/>
        <result property="name" column="name"/>
        <result property="hireDate" column="hire_date" jdbcType="TIMESTAMP" typeHandler="com.mli.assetmybatis.util.LocalDateTimeHandler"/>
        <result property="isActive" column="is_active"/>
        <result property="isAdmin" column="is_admin"/>
        <result property="resignationDate" column="resignation_date" jdbcType="TIMESTAMP" typeHandler="com.mli.assetmybatis.util.LocalDateTimeHandler"/>
        <result property="password" column="password"/>
        <result property="unitId" column="unit_id"/>
    </resultMap>
    <select id="authenticate" parameterType="map" resultType="boolean">
        SELECT COUNT(*) FROM Users WHERE id = #{id} AND password = #{password}
    </select>

    <select id="findById" resultMap="usersResultMap" parameterType="int">
        SELECT * FROM Users WHERE id = #{userId}
    </select>

</mapper>